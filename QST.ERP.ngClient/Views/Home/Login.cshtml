@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Login";
}
<form method="POST" class="signin">

    <h5 style="color:#003468;font-size: 18px;">Sign In تسجيل الدخول</h5>
    <p style="color:#003468;font-size: 14px;margin-bottom: 20px;">سجل الدخول للوصول الى حسابك.</p>
    <div class="form-group has-feedback">
        <input type="text" class="form-control" name="userName" id="userName" placeholder="User Name اسم المستخدم">
        <span class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" class="form-control" name="password" id="password" placeholder="Password كلمة المرور">
        <span class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></span>
        <span id="inputSuccess3Status" class="sr-only">(success)</span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label style="color: #073a6c;">
                <input type="checkbox"> تزكرني
            </label>
            <label class="pull-right"><a style="text-decoration: underline;color: #073a6c;" href="#">Forgot password?</a></label>
        </div>
    </div>
    <button type="submit" name="Submit" class="btn btn-blue max-width">Sign In    تسجيل الدخول  </button>

</form>

